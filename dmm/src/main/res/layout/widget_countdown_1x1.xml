<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="56dp"
    android:layout_height="74dp"
    android:background="@drawable/card_background_shadow"
    android:paddingTop="4dp" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/widget" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/card_background"
            android:weightSum="1000" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="382" >

                <ImageView android:id="@+id/widget_stripe"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/tile_gray" />

                <TextView android:id="@+id/widget_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="0dp"
                android:layout_weight="618" >

                <TextView android:id="@+id/widget_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:text="@string/card_countdown"
                    android:textColor="@color/dark_gray"
                    android:textSize="24sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>