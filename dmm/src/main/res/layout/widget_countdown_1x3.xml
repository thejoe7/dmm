<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="74dp" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/card_bg" >
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:gravity="center" >
            <ImageView android:id="@+id/widget_stripe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/tile_gray" />
            <TextView android:id="@+id/widget_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/card_countdown"
                android:textColor="@android:color/white"
                android:textSize="30sp" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="1000" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="538" >
                <TextView android:id="@+id/widget_alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="23sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="462" >
                <TextView android:id="@+id/widget_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>