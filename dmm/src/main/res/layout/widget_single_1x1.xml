<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_widget_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="4dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/list_widget_cell_bg"
        android:weightSum="1000" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="382" >

            <ImageView android:id="@+id/widget_stripe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/tile_gray" />

            <TextView android:id="@+id/widget_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="none"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView android:id="@+id/widget_countdown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="618"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/card_countdown"
            android:textColor="@color/dark_gray"
            android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>