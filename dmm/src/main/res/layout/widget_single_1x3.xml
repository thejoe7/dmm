<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_widget_bg"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="5dp" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/list_widget_cell_bg" >

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="2dp"
            android:gravity="center" >

            <ImageView android:id="@+id/widget_stripe"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/tile_gray" />

            <TextView android:id="@+id/widget_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/card_countdown"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="2dp"
            android:weightSum="1000" >

            <TextView android:id="@+id/widget_alias"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="520"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:textSize="23sp" />

            <TextView android:id="@+id/widget_date"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="480"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>