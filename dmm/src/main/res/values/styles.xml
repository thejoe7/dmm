<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="Theme.DmmTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_dmmtheme</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.DmmTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.DmmTheme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.DmmTheme</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.DmmTheme</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.DmmTheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_dmmtheme</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_dmmtheme</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.DmmTheme</item>
        <item name="android:itemTextAppearance">@style/Theme.DarkMenuTextAppearance</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.DmmTheme.Widget</item>

        <!--widgets accent-->
        <item name="android:editTextBackground">@drawable/dmmtheme_edit_text_holo_light</item>
        <item name="android:textColorHighlight">#99ff4444</item>
        <item name="android:textSelectHandleLeft">@drawable/dmmtheme_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/dmmtheme_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/dmmtheme_text_select_handle_middle</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/dmmtheme_btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/dmmtheme_btn_radio_holo_light</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/dmmtheme_list_selector_holo_light</item>
        <item name="android:fastScrollThumbDrawable">@drawable/dmmtheme_fastscroll_thumb_holo</item>

        <item name="android:buttonStyle">@style/Button.DmmTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButton.DmmTheme</item>
        <item name="android:dropDownSpinnerStyle">@style/Spinner.DmmTheme</item>
        <item name="android:buttonStyleToggle">@style/Toggle.DmmTheme</item>
        <item name="android:activatedBackgroundIndicator">@drawable/dmmtheme_activated_background_holo_light</item>

    </style>

    <style name="ActionBar.Solid.DmmTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_dmmtheme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dmmtheme</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dmmtheme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.DmmTheme</item>
    </style>

    <style name="ActionBar.Transparent.DmmTheme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_dmmtheme</item>
        <item name="android:progressBarStyle">@style/ProgressBar.DmmTheme</item>
    </style>

    <style name="PopupMenu.DmmTheme" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dmmtheme</item>
        <item name="android:itemTextAppearance">@style/Theme.DarkMenuTextAppearance</item>
    </style>

    <style name="DropDownListView.DmmTheme" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dmmtheme</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="ActionBarTabStyle.DmmTheme" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_dmmtheme</item>
    </style>

    <style name="DropDownNav.DmmTheme" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_dmmtheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dmmtheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_dmmtheme</item>
    </style>

    <style name="ProgressBar.DmmTheme" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_dmmtheme</item>
    </style>

    <style name="ActionButton.CloseMode.DmmTheme" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dmmtheme</item>
    </style>

    <style name="Button.DmmTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/dmmtheme_btn_default_holo_light</item>
    </style>

    <style name="ImageButton.DmmTheme" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/dmmtheme_btn_default_holo_light</item>
    </style>

    <style name="Spinner.DmmTheme" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/dmmtheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/dmmtheme_list_selector_holo_light</item>
    </style>

    <style name="Toggle.DmmTheme" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/dmmtheme_btn_toggle_holo_light</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.DmmTheme.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.DmmTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.DmmTheme</item>
    </style>

    <style name="Theme.Translucent" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@android:style/Theme.Holo.Light.NoActionBar</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--edit text accent-->
        <item name="android:editTextBackground">@drawable/dmmtheme_textfield_disabled_holo_light</item>
    </style>
    
    <style name="Theme.DarkMenuTextAppearance" parent="android:TextAppearance.Holo" >
        <item name="android:textColor">@drawable/selectable_menu_text_color_dmmtheme</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
